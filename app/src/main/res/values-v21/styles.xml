<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:statusBarColor">@color/naranja_cabeceras</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AutoCompleteTextViewLight" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="Widget.DropDownItemLight" parent="@android:style/Widget.DropDownItem">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="buttonBarStyle">@style/ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButton</item>
        <item name="android:statusBarColor">@color/naranja_cabeceras</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="NoActionBar" parent="@android:style/Theme.Material.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/naranja_cabeceras</item>

    </style>

    <style name="Padding0">
        <item name="android:paddingBottom">@dimen/activity_padding_zero</item>
        <item name="android:paddingLeft">@dimen/activity_padding_zero</item>
        <item name="android:paddingRight">@dimen/activity_padding_zero</item>
        <item name="android:paddingTop">@dimen/activity_padding_zero</item>
    </style>

    <style name="Padding16">
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_vertical_margin</item>
        <item name="android:paddingRight">@dimen/activity_vertical_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="Padding16V">
        <item name="android:paddingBottom">@dimen/activity_vertical_margin_10</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin_10</item>
    </style>

    <style name="BotonesInicio">
        <item name="android:background">@null</item>
    </style>

    <!-- Tema general de app -->
    <style name="TemaGeneral" parent="@android:style/Theme.Material.Light">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:statusBarColor">@color/naranja_cabeceras</item>
        <item name="android:windowBackground">@color/blanco</item>
        <item name="android:textColor">@color/negro</item>
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="WindowTitleBackground">
        <item name="android:background">@color/naranja_cabeceras</item>
        <item name="android:paddingLeft">10sp</item>
    </style>

    <style name="TitleTextColor">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/negro</item>
        <item name="android:textColorHighlight">@null</item>
    </style>

    <!-- action bar -->
    <style name="ActionBar" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@color/naranja_cabeceras</item>
        <item name="android:backgroundSplit">@color/naranja_cabeceras</item>
    </style>

</resources>